{% extends "app/njk/layout/main.njk" %}
{% block content %}
  <div class="catalog-head">
    <div class="container">
      <h1 class="catalog-head-title">каталог</h1>
      <p class="catalog-head-text">галерея камня</p>
    </div>
  </div>
  <div class="catalog-section">
    <section class="catalog-section-head-block">
      <div class="container">
        <div class="catalog-section-head">
          <p class="catalog-title">
            Разновидностей:
            <span class="catalog-title-quantity">16</span>
          </p>
          <form class="catalog-search-form">
            <label class="catalog-search-input-wrapper">
              <span class="visually-hidden">Поиск</span>
              <input type="text" class="catalog-search-input" placeholder="Поиск">
            </label>
            <button class="btn--catalog-search">
              <span class="visually-hidden">Искать</span>
              <svg class="svg-icon svg-icon--catalog-search">
                <use xlink:href="./images/sprites/svg/sprite.symbol.svg#mdi_search"></use>
              </svg>
            </button>
          </form>
        </div>
      </div>
    </section>

    <div class="container container--no-padding catalog-main-nav">
      <div class="dd-wrapper dd-wrapper--catalog-main-nav catalog-stone-dd js--dd-parent">
        <button class="btn--dd js--dd-btn">
          <span class="btn-dd-text">Камень</span>
          <svg class="svg-icon svg-icon--btn-dd">
            <use xlink:href="./images/sprites/svg/sprite.symbol.svg#dd_arrow"></use>
          </svg>
        </button>
        <div class="dd-inner">
          {% set stoneItems = [
            [
              'Гранит', '298'
            ],
            [
              'Мрамор', '176'
            ],
            [
              'Оникс', '25'
            ],
            [
              'Травертин', '38'
            ],
            [
              'Кварцит', '15'
            ],
            [
              'Агломерат', '300'
            ]
          ] %}
          {% for name, number in stoneItems %}
            <div class="dd-item">
              <label class="base-checkbox-wrapper">
                <input type="checkbox" class="base-checkbox" {% if loop.index == '3'%} disabled="disabled" {%endif%}>
                <span class="base-checkbox-fake"></span>
                <span class="base-checkbox-text">{{name}}</span>
                <span class="base-checkbox-sub-text">{{number}}</span>
              </label>
            </div>
